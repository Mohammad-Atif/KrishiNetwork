<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    app:cardCornerRadius="2dp"
    app:cardPreventCornerOverlap="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="115dp">

        <ImageView
            android:id="@+id/CropImg"
            android:layout_width="90dp"
            android:layout_height="105dp"
            android:layout_marginStart="10dp"
            android:contentDescription="@string/crop_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtCropName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:fontFamily="@font/poppins_medium"
            android:text="हिसार"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/CropImg"
            app:layout_constraintTop_toTopOf="@+id/CropImg" />

        <TextView
            android:id="@+id/txtDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:fontFamily="@font/poppins_medium"
            android:text="151.72Km"
            android:textColor="@android:color/black"
            android:textSize="11sp"
            app:layout_constraintBottom_toTopOf="@+id/txtLastDate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/CropImg"
            app:layout_constraintTop_toBottomOf="@+id/txtCropLocation"
            app:layout_constraintVertical_bias="0.307" />

        <TextView
            android:id="@+id/txtLastDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:fontFamily="@font/poppins_medium"
            android:text="2 दिन पहले"
            android:textColor="@android:color/black"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@+id/CropImg"
            app:layout_constraintStart_toEndOf="@+id/CropImg" />

        <TextView
            android:id="@+id/txtCropLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/poppins_medium"
            android:text="श्री माधोपुर,सीकर,राजस्थान"
            android:textColor="#4D2C23"
            android:textSize="11sp"
            app:layout_constraintStart_toEndOf="@+id/CropImg"
            app:layout_constraintTop_toBottomOf="@+id/txtCropName" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>